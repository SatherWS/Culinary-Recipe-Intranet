<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Killer Recipes</title>
        <link rel="stylesheet" href="/css/main.css">
        <link rel="stylesheet" href="/css/results.css">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css"
        integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
        <!--google fonts-->
        <link href="https://fonts.googleapis.com/css?family=Shrikhand" rel="stylesheet">
        <!--bootstrap-->
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>

        <!--smooth scrolling js-->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="/scripts/scroll.js"></script>
        <script src="/scripts/script.js"></script>
    </head>
    <body>
<!--Navigation & Home Page----------------------------------------------------->
  <header id="find">
        <div class="black">
          <nav class="flex-space black-rgba">
            <!--Menu List-->
            <div class="text-left">
              <div class="dropdown">
                <div onclick="closeMenu()" class="dropbtn">
                  <img  src="/img/menu2.png" width="50">
                </div>
                <!--Navigation-------------------------------------------->
                <div id ="drop" class="dropdown-content">
                  <a href="/index.html">About</a>
                  <a href="/getRecipes">All Recipes</a>
                  <a href="/scraper.html">Web Scraper</a>
                  <a href="#faq">Contact Info</a>
                </div>
              </div>
            </div>
            <!--Logo-->
            <div id="home">
              <a href="index.html">
                <img src="/img/newLogo.png" width="60">
              </a>
            </div>
          </nav>
            <!--hero img section----------------------------------------------------------->
            <div class="content">
              <section class="inner text-center">
              <% if (typeof ret == 'object' && ret) { %>
                <h1 id="title"><%= ret.name %></h1>
              <% } else { %>
                <h1 id="title"><%= single[0].title %></h1>
              <% } %>
            </section>
          </div>
      </div>
  </header>
<!-- queried recipes section----------------------------------------------------------->
  
  <div class="container details">
      <div class="panel">
          <h2>Instructions</h2>
          <% if (typeof ret == 'object' && ret) { %>
            <% ret.instructions.forEach( (item) => { %>
              <p><%= item %></p>
            <% }) %> 
          <% } else { %>
            <p><%= single[0].instructions %></p>
          <% } %>

          <h2>Ingredients</h2>
          <% if (typeof ret == 'object' && ret) { %>
            <ul>
              <% ret.ingredients.forEach( (item) => { %>
                <li><%= item %></li>
              <% }) %> 
            </ul>
          <% } else { %>
            <p><%= single[0].ingredients %></p>
          <% } %>
      </div>
  </div>

<!--footer section------------------------------------------------------------->
<footer id="faq">
    <div class="social">
        <span class="a"><img src="/img/newLogo.png" width="60"></span>
    </div>
    <br>
    <div class="row legal">
      <p class="text-center">&copy;Killer Recipes 2021</p>
    </div>
    <br>
</footer>

</body>
</html>
